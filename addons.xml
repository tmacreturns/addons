<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="script.arcanoid"
       name="Arcanoid"
       version="0.0.1"
       provider-name="Efren Fernandez (Sitecom)">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
  </requires>
  <extension point="xbmc.python.script"
             library="default.py" />
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Twitter add-on for XBMC</summary>
    <description lang="en">Twitter add-on developed by Sitecom to bring your personal contacts, pictures and news feed to your TV.</description>
  </extension>
</addon>

<addon id="script.gmail.checker"
       name="Gmail Checker"
       version="2.2.1"
       provider-name="Amet">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
  </requires>
  <extension point="xbmc.python.script"
             library="default.py" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Gmail Checker</summary>
    <summary lang="hu">Gmail ellenörző</summary>
    <description lang="en">View Gmail e-mails</description>
    <description lang="hu">Gmail leveleid olvasása</description>
    <platform>all</platform>
  </extension>
</addon>
</addons>
