       name="Arcanoid"
       version="0.0.1"
       provider-name="Efren Fernandez (Sitecom)">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
  </requires>
  <extension point="xbmc.python.script"
             library="default.py" />
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Twitter add-on for XBMC</summary>
